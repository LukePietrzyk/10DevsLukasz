---
import Layout from "../../layouts/Layout.astro";
import LoginForm from "../../components/auth/LoginForm";
export const prerender = false;

// Check if user is already authenticated
const user = Astro.locals.user;
const redirectParam = Astro.url.searchParams.get("redirect");

// If user is already logged in, redirect to destination or home
if (user) {
  const destination = redirectParam || "/";
  return Astro.redirect(destination, 302);
}

// Pass redirect param to component
const redirectTo = redirectParam || undefined;
---

<Layout title="Logowanie - Flashcards" lang="pl">
  <div class="min-h-screen flex items-center justify-center p-4" data-testid="login-page">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-2xl font-bold">Flashcards</h1>
        <p class="text-muted-foreground mt-2">Zaloguj siÄ™ do swojego konta</p>
      </div>
      <LoginForm client:load redirectTo={redirectTo} />
    </div>
  </div>
</Layout>

<style is:global>
  html,
  body {
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%) !important;
    min-height: 100vh;
  }
</style>
