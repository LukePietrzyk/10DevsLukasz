---
import "../styles/global.css";
import Header from "../components/navigation/Header.astro";
import AuthInitializer from "../components/auth/AuthInitializer";

interface Props {
  title?: string;
  lang?: string;
}

const { title = "Flashcards", lang = "pl" } = Astro.props;

// Get user from middleware (server-side verification)
// This ensures server-side authentication state is available throughout the app
const user = Astro.locals.user;
const isAuthenticated = Astro.locals.isAuthenticated;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {/* Initialize client-side auth store on mount */}
    <AuthInitializer client:load />
    <Header user={user} />
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
